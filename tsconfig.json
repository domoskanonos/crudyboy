{
    "compilerOptions": {
      "target": "es2015",
      "declaration": true,
      "outDir": "lib",
      "module": "commonjs",
      "rootDir": "./src",
      "downlevelIteration": true,
      "strict": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true
    }
  }